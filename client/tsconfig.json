{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es2017",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "*": ["./src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./config/jest/setupTests.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx", "src/shared/config/storybook/StyleDecorator", "src/pages/OrdersPage/model/selectors/getOrdersPageData", "src/features/AddOrder/model/selectors/getNewOrderData",

  ],
  "exclude": [
    ".fttemplates/*"
  ]
}